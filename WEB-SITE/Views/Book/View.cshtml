@model WEB_SITE.Models.UpdateBookViewModel

@{
}
<h1>Sửa sách mới</h1>
<form method="post" action="View" class="mt-5">
    <div class="form-group">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="form-group">
        <label for="" class="form-label">Tên Tài Liệu</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label for="" class="form-label">Tác Giả</label>
        <input type="text" class="form-control" asp-for="Nxb">
    </div>
    <div class="form-group">
        <label for="" class="form-label">Nhà Xuất Bản</label>
        <input type="text" class="form-control" asp-for="Specialized">
    </div>
    <div class="form-group">
        <label for="" class="form-label">ngay nhap sach</label>
        <input type="date" class="form-control" asp-for="DayCreate">
    </div>
    <div class="form-group">
        <label for="" class="form-label">Tóm Tắt</label>
        <input type="text" class="form-control" asp-for="Image">
    </div>
    <div class="form-group">
        <label for="" class="form-label">ngay sua sach</label>
        <input type="text" class="form-control" asp-for="DayUpdate">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-primary"
            asp-action="Delete"
            asp-controller="Book">
        Delete
    </button>
</form>